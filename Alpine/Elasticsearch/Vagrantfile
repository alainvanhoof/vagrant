cluster = [ { :name => "dev-es-01", :ip => "10.0.0.40" , :net => "dev.net"},
            { :name => "dev-es-02", :ip => "10.0.0.41" , :net => "dev.net"}, 
            { :name => "dev-es-03", :ip => "10.0.0.42" , :net => "dev.net"},
            { :name => "dev-es-04", :ip => "10.0.0.43" , :net => "dev.net"} ]

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 4096
    vb.cpus = 1
    vb.linked_clone = true
 end

 config.vm.box = "Alpine"
 config.vm.synced_folder '.', '/vagrant', disabled: true
 cluster.each do |node|
    config.vm.define node[:name] do |config|
      config.vm.hostname = node[:name]
      config.vm.network "private_network", ip: node[:ip], netmask: "255.255.255.0", virtualbox_intnet: node[:net]
      config.vm.provision "ansible", playbook: "Provision.yml"
    end
 end
end
